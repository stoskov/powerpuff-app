<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer" 
      xmlns:widgets="utils/widgets" 
      loaded="pageLoaded" actionBarHidden="true">
    <drawer:RadSideDrawer>
        <drawer:RadSideDrawer.mainContent>
            <ScrollView>
            <GridLayout rows="auto, *">
                <StackLayout row="1">
                    <Image row="1" src='http://img2.tvtome.com/i/u/69bd905c43604c9accc7c2829ffa51d2.jpg' cssClass="logo" marginTop="0"/>
                    <Button text="Choose your mood" tap="{{ onSelectMood }}" cssClass="moodButton"/>
                    <Label text="Shake it now" cssClass="registrationlbl" visibility="{{ registerVisibility }}"/>
					<Label text="{{quote}}" />
                    <Button text="Get quote" tap="{{getQuote}}" />
                  <!--                    
 <Image row="1" src='https://cdn0.iconfinder.com/data/icons/phone-tab-settings-filled-line-1/614/476_-_Vibration_mode-128.png' cssClass="logo"/> -->
                </StackLayout>
                <ActivityIndicator row="1" busy="{{ isLoading }}" /> 
         </GridLayout>
            </ScrollView>
        </drawer:RadSideDrawer.mainContent>
        <drawer:RadSideDrawer.drawerContent>
            <widgets:drawer-content />
        </drawer:RadSideDrawer.drawerContent>
    </drawer:RadSideDrawer>
</Page>